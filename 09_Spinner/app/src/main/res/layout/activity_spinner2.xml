<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ej_spinner.Spinner2Activity">

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginVertical="25dp"

        android:entries="@array/planetas"
        app:layout_constraintEnd_toEndOf="@+id/textViewPosition"
        app:layout_constraintStart_toStartOf="@+id/textViewPosition"
        app:layout_constraintTop_toBottomOf="@+id/textViewPosition" />

    <TextView
        android:id="@+id/textViewElection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="25dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewElection"
        app:layout_constraintStart_toStartOf="@+id/textViewElection"
        app:layout_constraintTop_toBottomOf="@+id/textViewElection" />
</androidx.constraintlayout.widget.ConstraintLayout>